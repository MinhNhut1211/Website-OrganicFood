@model IEnumerable<WebOrganicFood.Models.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ Tên Khách Hàng
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThanhToan)
        </th>
        <th>
            Tình Trạng Đơn Hàng
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TongTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChiNhanHang)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiDung.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @{ if (@item.ThanhToan == 1)
                {
                    <div style="color:red">Thanh toán tiền mặt</div> }
                else if (@item.ThanhToan == 2)
                {
                    <div style="color:brown">Thanh toán chuyển khoản</div> } }
        </td>
        <td>
            @{ if (@item.TinhTrangGiaoHang == 0)
                {
                    <h5 style="color:red">Đang chờ xác nhận. </h5> }
                else if (@item.TinhTrangGiaoHang == 1)
                {
                    <h5 style="color:green">Đã xác nhận  </h5> }
                else
                {
                    <h5 style="color:orangered">Đang chờ xác nhận </h5> } }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.MaDonHang }) |
        </td>
    </tr>
}

</table>
