                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            @using (Html.BeginForm("SanPhamPartialFull", "SanPham", FormMethod.Get)) { 
                            <input type="text" placeholder="What do yo u need?" @Html.TextBox("searching", ViewBag.CurrentFilter as string)>
